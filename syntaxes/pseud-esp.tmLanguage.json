{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Pseudocodigo Español",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#types"
		},
		{
			"include": "#varAssignment"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.pseud-esp",
					"match": "\\b(si|entonces|si_no|fin_si)\\b"
				},
				{
					"name": "keyword.function.pseud-esp",
					"match": "\\b(función|inicio|devolver|fin_función)\\b"
				},
				{
					"name": "keyword.operator.logical.pseud-esp",
					"match": "\\b(and|or|∧)\\b"
				}
			]
		},
		
		"types": {
			"patterns": [
				{
					"name": "storage.type.pseud-esp",
					"match": "\\b(entero|real|cadena|lógico)\\b"
				}
			]
		},

		"varAssignment": {
			"patterns": [
				{
					"name": "variable.declaration.pseud-esp",
					"begin": "\\b(entero|real|cadena|lógico|test)\\b\\s*(:)\\s*",
					"beginCaptures": {
						"1":{
							"name": "storage.type.pseud-esp"
						},
						"2":{
							"name": "keyword.operator.assignment.pseud-esp"
						}
					},
					"end": "\\n"
				}
			]
		},

		"strings": {
			"name": "string.quoted.double.pseud-esp",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pseud-esp",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.pseud"
}